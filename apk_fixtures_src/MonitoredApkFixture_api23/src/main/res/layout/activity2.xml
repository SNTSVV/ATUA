<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="org.droidmate.fixtures.apks.monitored.Activity2">

	<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="API: Camera.open() + Launch Activity 3"
					android:id="@+id/button_api_activity3"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
					android:layout_alignParentStart="true"
					android:layout_alignRight="@+id/button_crash"
					android:layout_alignEnd="@+id/button_crash"
					android:onClick="callAPIAndLaunchActivity3"/>

	<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Crash Activity"
					android:id="@+id/button_crash"
					android:layout_below="@+id/button_api_activity3"
					android:layout_alignParentLeft="true"
					android:layout_alignParentStart="true"
					android:layout_alignRight="@+id/button_api_google"
					android:layout_alignEnd="@+id/button_api_google"
					android:onClick="crashActivity"/>

	<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="API: AudioManager.isBluetoothA2dpOn() + Launch Google Play"
					android:id="@+id/button_api_google"
					android:layout_below="@+id/button_crash"
					android:layout_alignParentLeft="true"
					android:layout_alignParentStart="true"
					android:onClick="callAPIAndLaunchGooglePlay"/>
</RelativeLayout>
